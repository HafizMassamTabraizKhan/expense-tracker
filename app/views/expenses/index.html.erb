<% content_for :page_title, "Expenses" %>

<h1>Expenses</h1>

<div id="expenses">
  <% @expenses.each do |expense| %>
    <div id="<%= dom_id expense %>", class ="expense">
  <p>
    <strong>Name:</strong>
    <%= expense.name %>
  </p>

  <p>
    <strong>Amount:</strong>
    <%= expense.amount %>
  </p>

</div>
  <% end %>
</div>

<%= link_to "New expense", new_category_expense_path %>